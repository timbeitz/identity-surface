---
import BaseLayout from "../layouts/BaseLayout.astro";
import { resume } from "../data/resume";
---

<BaseLayout title={resume.name} description={`${resume.title} â€“ ${resume.location}`}>
  <section class="bio">
    <p>
      Creative Director working at the intersection of brand, systems, and technology.
      Independent practice building creative and technology solutions across diverse industries.
    </p>
    <p class="tagline">Strategy to system to execution.</p>
  </section>

  <section class="experience">
    <table>
      <thead>
        <tr>
          <th>Role</th>
          <th class="hide-mobile">Type</th>
          <th>Company</th>
          <th>Years</th>
        </tr>
      </thead>
      <tbody>
        {resume.experience.map((job) => (
          <tr>
            <td>{job.role}</td>
            <td class="hide-mobile type">{job.type}</td>
            <td class="company">{job.company}</td>
            <td class="mono years">{job.years}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>

  <section class="details">
    <div class="detail-row">
      <div class="detail-label">Skills</div>
      <div class="detail-content">{resume.skills.join(", ")}</div>
    </div>
    <div class="detail-row">
      <div class="detail-label">Education</div>
      <div class="detail-content">{resume.education.degree}, {resume.education.school}</div>
    </div>
    <div class="detail-row">
      <div class="detail-label">Contact</div>
      <div class="detail-content contact-links">
        <a href={`mailto:${resume.contact.email}`}>{resume.contact.email}</a>
        <a href={`https://${resume.contact.linkedin}`} target="_blank" rel="noopener">{resume.contact.linkedin}</a>
      </div>
    </div>
  </section>

  <style>
    .bio {
      max-width: 42ch;
    }

    .bio p {
      margin: 0 0 12px;
      color: var(--muted);
    }

    .tagline {
      color: var(--fg) !important;
      font-weight: 500;
    }

    .experience {
      border-top: 1px solid var(--line);
      border-bottom: 1px solid var(--line);
      margin-left: calc(var(--gutter) * -1);
      margin-right: calc(var(--gutter) * -1);
      padding: 0 var(--gutter);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      text-align: left;
      padding: 14px 0;
      border-bottom: 1px solid var(--line);
    }

    th {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--muted);
      font-weight: 500;
    }

    tbody tr:last-child td {
      border-bottom: none;
    }

    tbody tr {
      transition: background 0.1s;
    }

    tbody tr:hover {
      background: var(--line);
    }

    .company {
      font-weight: 500;
    }

    .type {
      color: var(--muted);
    }

    .years {
      text-align: right;
      color: var(--muted);
      font-size: 13px;
    }

    th:last-child {
      text-align: right;
    }

    .details {
      display: grid;
      gap: 16px;
    }

    .detail-row {
      display: grid;
      grid-template-columns: 100px 1fr;
      gap: 16px;
      font-size: 14px;
    }

    .detail-label {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--muted);
      padding-top: 2px;
    }

    .detail-content {
      color: var(--muted);
    }

    .contact-links {
      display: flex;
      gap: 20px;
    }

    .contact-links a {
      font-family: var(--mono);
      font-size: 13px;
    }

    @media (max-width: 600px) {
      .hide-mobile {
        display: none;
      }

      .detail-row {
        grid-template-columns: 1fr;
        gap: 4px;
      }

      .contact-links {
        flex-direction: column;
        gap: 8px;
      }
    }
  </style>
</BaseLayout>
